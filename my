#!/usr/bin/python3
import sys


def is_prime(n):
    """ is_prime - this function check the prime numbers
       args n: this is the numbers beign passed by
    """
    if n <= 1:
        return False
    if n <= 3:
        return True
    if n % 2 == 0 or n % 3 == 0:
        return False
    i = 5
    while i * i <= n:
        if n % i == 0 or n % (i + 2) == 0:
            return False
        i += 6
    return True


def factorize_number(number):
    """ factorize_number - this function print the prime numbers
        args numbers: the argument beign passed on
    """
    for i in range(2, number + 1):
        if number % i == 0:
            if is_prime(i) and is_prime(number // i):
                return i, number // i
    return None


if __name__ == "__main":
    if len(sys.argv) != 2:
        print("Usage: factors <file>")
        sys.exit(1)

    input_file = sys.argv[1]

    try:
        with open(input_file, 'r') as file:
            for line in file:
                number = int(line.strip())
                if number <= 1:
                    print(f"Error: {number} invalid.")
                    continue
                factors = factorize_number(number)
                if factors:
                    p, q = factors
                    print(f"{number}={p}*{q}")
    except FileNotFoundError:
        print(f"Error: File '{input_file}' not found.")
    except ValueError:
        print("Error: Invalid number in the input file.")
